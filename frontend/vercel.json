{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://bgf-backend.vercel.app/api/v1",
    "NEXT_PUBLIC_APP_NAME": "BGF Aid System",
    "NEXT_PUBLIC_ORG_NAME": "Bridging Gap Foundation"
  }
}