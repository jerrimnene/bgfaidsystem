{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://bgfaidsystems.live/api/v1"
  },
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next"
}
